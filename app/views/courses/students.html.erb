<table class="table">
  <thead class="thead-dark">
  <tr>
    <th scope="col">#</th>
    <th scope="col">Full name</th>
    <th scope="col">Score</th>
  </tr>
  </thead>
  <tbody>
  <% @students.each_with_index do |student, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td class="">
        <%= student.full_name %>
      </td>
      <td>
        <%= student.user_scores.where(course_id: params[:course_id]).sum(:score).to_s %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add score', user_score_new_path(params[:course_id]) %>

<div class="p-3">
  <%= link_to 'Back', course_path(params[:course_id]) %>
</div>
